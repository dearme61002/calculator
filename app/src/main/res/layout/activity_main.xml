<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="0"
        tools:ignore="Orientation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="@string/add"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:columnCount="4"
            android:rowCount="4">

            <Button android:text="1"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="2"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="3"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="+" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="4" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="5" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="6" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="-" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="7" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="8" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="9" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="*" android:layout_width="80dp"
                android:layout_height="80dp"/>

            <Button android:text="0"
                android:layout_height="80dp"/>

            <Button
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="計算"
                />

            <Button android:text="/"
                android:layout_height="80dp"/>

        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>